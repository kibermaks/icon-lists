{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Google Fonts â€“ /metadata/icons response",
  "type": "object",
  "required": ["host", "asset_url_pattern", "families", "icons"],
  "additionalProperties": false,

  "properties": {
    "host": {
      "type": "string",
      "minLength": 1
    },

    "asset_url_pattern": {
      "type": "string",
      "minLength": 1
    },

    "families": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },

    "icons": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/icon" }
    }
  },

  "$defs": {
    "icon": {
      "type": "object",
      "required": [
        "name",
        "version",
        "codepoint",
        "unsupported_families",
        "categories",
        "tags",
        "sizes_px"
      ],
      "additionalProperties": false,

      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },

        "version": {
          "type": "integer",
          "minimum": 1
        },

        "popularity": {
          "type": "integer",
          "minimum": 0
        },

        "codepoint": {
          "type": "integer",
          "minimum": 0
        },

        "unsupported_families": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },

        "categories": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": { 
            "type": "string",
            "enum": [
                "action",
                "alert",
                "av",
                "communication",
                "content",
                "device",
                "editor",
                "file",
                "hardware",
                "home",
                "image",
                "maps",
                "navigation",
                "notification",
                "places",
                "search",
                "social",
                "toggle",
                "Actions",
                "Activities",
                "Android",
                "Audio&Video",
                "Business",
                "Communicate",
                "Hardware",
                "Home",
                "Household",
                "Images",
                "Maps",
                "Privacy",
                "Social",
                "Text",
                "Transit",
                "Travel",
                "UI actions"
            ]
          },
          "uniqueItems": true
        },

        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },

        "sizes_px": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "integer", "minimum": 0 },
          "uniqueItems": true
        }
      }
    }
  }
}